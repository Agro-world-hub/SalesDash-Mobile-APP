{
  "expo": {
    "name": "SalesDash",
    "slug": "SalesDash",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/lgooo.png",
      "resizeMode": "contain",
      "backgroundColor": "#6638CE"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSCameraUsageDescription": "This app requires camera access to scan plant QR codes.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save plant images.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to track plant care reminders based on your location.",
        "NSLocationAlwaysUsageDescription": "This app uses your location in the background to give accurate care reminders.",
        "NSMicrophoneUsageDescription": "Microphone access is required to record sounds for plant growth monitoring.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth is required to connect to plant sensors.",
        "UIBackgroundModes": [
          "location",
          "audio"
        ]
      },
      "permissions": [
        "CAMERA",
        "PHOTO_LIBRARY",
        "NOTIFICATIONS",
        "MICROPHONE",
        "CALENDAR",
        "CONTACTS",
        "MOTION",
        "BLUETOOTH",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "ACCESS_NETWORK_STATE",
        "CHANGE_NETWORK_STATE",
        "VIBRATE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "bundleIdentifier": "com.salesdash.SalesDash"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 1,
      "package": "com.salesdash.SalesDash",
      "permissions": [
        "INTERNET",
        "android.permission.FOREGROUND_SERVICE",
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "VIBRATE",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE",
        "RECEIVE_BOOT_COMPLETED",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "ACCESS_NETWORK_STATE",
        "CHANGE_NETWORK_STATE",
        "SYSTEM_ALERT_WINDOW",
        "NOTIFICATIONS",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.MANAGE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      }
  
    }
  }
}
